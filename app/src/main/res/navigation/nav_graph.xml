<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.sleeptracker.ui.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_addSleepDataFragment"
            app:destination="@id/addSleepDataFragment" />
        <action
            android:id="@+id/action_mainFragment_to_sleepDataFragment"
            app:destination="@id/sleepDataFragment" />
    </fragment>
    <fragment
        android:id="@+id/sleepDataFragment"
        android:name="com.example.sleeptracker.ui.fragments.SleepDataFragment"
        android:label="fragment_sleep_data"
        tools:layout="@layout/fragment_sleep_data" />
    <fragment
        android:id="@+id/addSleepDataFragment"
        android:name="com.example.sleeptracker.ui.fragments.AddSleepDataFragment"
        android:label="fragment_add_sleep_data"
        tools:layout="@layout/fragment_add_sleep_data" />
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.sleeptracker.ui.fragments.AuthFragment"
        android:label="AuthFragment" >
        <action
            android:id="@+id/action_authFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment><action android:id="@+id/action_global_authFragment" app:destination="@id/authFragment"/>
</navigation>